<body>


    <div class="main-section">

        <div class="row">
            <div id="block1" class="block">
                <p>1</p>
            </div>
            <div id="block2" class="block">
                <p>2</p>
            </div>
        </div>

        <div class="row center">
            <button class="btn" onclick="antiClockwiseColor()">
                Anti-Clockwise
            </button>
            <button class="btn" onclick="clockwiseColor()">
                Clockwise
            </button>
        </div>

        <div class="row">
            <div id="block4" class="block">
                <p>4</p>
            </div>
            <div id="block3" class="block">
                <p>3</p>
            </div>
        </div>

    </div>

    
    <script type="text/javascript">

        let colors1 = ['red', 'yellow', 'green', 'orange'];
        let colors2 = ['red', 'orange', 'green', 'yellow'];
        let i = 0;

        function clockwiseColor() {

            if (i == 0) {
                j = 3;
                k = 2;
                l = 1;
            } else if (i == 1) {
                j = 0;
                k = 3;
                l = 2;
            } else if (i == 2) {
                j = 1;
                k = 0;
                l = 3;
            } else if (i == 3) {
                j = 2;
                k = 1;
                l = 0;
            }

            document.getElementById("block1").style.backgroundColor = colors2[i];
            document.getElementById("block2").style.backgroundColor = colors2[j];
            document.getElementById("block3").style.backgroundColor = colors2[k];
            document.getElementById("block4").style.backgroundColor = colors2[l];
            i++;
            if (i == 4) {
                i = 0;
            }

        }

        function antiClockwiseColor() {

            if (i == 0) {
                j = 1;
                k = 2;
                l = 3;
            } else if (i == 1) {
                j = 2;
                k = 3;
                l = 0;
            } else if (i == 2) {
                j = 3;
                k = 0;
                l = 1;
            } else if (i == 3) {
                j = 0;
                k = 1;
                l = 2;
            } 
            
            document.getElementById("block1").style.backgroundColor = colors1[i];
            document.getElementById("block2").style.backgroundColor = colors1[j];
            document.getElementById("block3").style.backgroundColor = colors1[k];
            document.getElementById("block4").style.backgroundColor = colors1[l];
            i++;
            if (i == 4) {
                i = 0;
            }

        }

    </script>
